<%= form_for(@belt) do |f| %>
  <div class="form-group">
    <%= f.label :material %>
    <%= f.text_field :material, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :size %>
    <%= f.number_field :size, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>

  <%= f.submit 'Create Belt', class: 'btn btn-primary' %>
<% end %>